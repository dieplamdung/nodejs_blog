<div class="mt-4">
    <h3>SỬA KHÓA HỌC</h3>
    <form name="form-edit" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" placeholder="tên khóa học"
                name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" placeholder="Mô tả"
                name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoID">Video ID</label>
            <input type="text" class="form-control" value="{{course.videoID}}" id="videoID" placeholder="Video ID"
                name="videoID">
        </div>

        <button type="submit" class="btn btn-primary abc">LƯU LẠI</button>
    </form>
</div>

